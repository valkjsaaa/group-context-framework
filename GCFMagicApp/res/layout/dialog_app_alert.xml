<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical"
    android:padding="5dp">
    
	<TextView
	    android:id="@+id/txtAppName"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:textColor="@color/custom_blue"
	    android:textSize="18sp"
	    android:text="App Name Goes Here"/>
		    
	<TextView
	    android:id="@+id/txtAppDescription"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:textSize="12sp"
	    android:textColor="#666666"
	    android:textStyle="italic"
	    android:text="App Description Goes Here"/>
    
	<LinearLayout 
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content" 
    	android:orientation="vertical"
    	android:layout_marginTop="10dp"
    	android:padding="5dp">
    	
	    <!-- Button for Running the Application -->
	    <LinearLayout
	        android:id="@+id/btnRun"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@color/custom_green"
	    	android:minWidth="100dp"
	    	android:padding="10dp"
	        android:layout_gravity="right"
	        android:orientation="vertical">
	        <TextView
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center"
	            android:text="RUN"
	            android:textColor="#FFFFFF"
	            android:textSize="12sp" />
	    </LinearLayout>
	</LinearLayout>
	
	<!-- Contexts Required -->
	<LinearLayout 
	    android:id="@+id/layoutContexts"
	   	android:layout_width="match_parent"
    	android:layout_height="wrap_content" 
    	android:orientation="vertical"
    	android:visibility="gone"
    	android:layout_margin="5dp">
	    
	    <TextView
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:gravity="right"
	    	android:textSize="10sp"
	    	android:textColor="#666666"
	    	android:text="Contexts Needed"/>
	    
	    <View android:layout_width="fill_parent" android:layout_height="2dp" android:background="#CCCCCC"/>
	    	<TextView
	    	    android:id="@+id/txtAppContexts"
	    		android:layout_width="match_parent"
	    		android:layout_height="wrap_content"
	    		android:layout_marginTop="5dp"
	    		android:layout_marginBottom="5dp"
	    		android:textSize="12sp"
	    		android:textColor="#666666"
	    		android:text="Context #1"/>
		<View android:layout_width="fill_parent" android:layout_height="2dp" android:background="#CCCCCC"/>
	</LinearLayout>
	
	<!-- System Preferences Requested -->
	<LinearLayout 
	    android:id="@+id/layoutPreferences"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content" 
    	android:orientation="vertical"
    	android:visibility="gone"
       	android:layout_margin="5dp">
	    
	    <TextView
	    	android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:gravity="right"
	    	android:textSize="10sp"
	    	android:textColor="#666666"
	    	android:text="Preferences Requested"/>
	    
	    <View android:layout_width="fill_parent" android:layout_height="2dp" android:background="#CCCCCC"/>
	    	<TextView
	    	    android:id="@+id/txtAppPreferences"
	    		android:layout_width="match_parent"
	    		android:layout_height="wrap_content"
	    		android:layout_marginTop="5dp"
	    		android:layout_marginBottom="5dp"
	    		android:textSize="12sp"
	    		android:textColor="#666666"
	    		android:text="Preference #1"/>
		<View android:layout_width="fill_parent" android:layout_height="2dp" android:background="#CCCCCC"/>
	</LinearLayout>
	
</LinearLayout>
